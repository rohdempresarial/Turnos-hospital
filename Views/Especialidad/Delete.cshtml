@model Hospital.Models.Especialidad


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Especialidad</h4>
    <hr />
    <div class="row">
            <div class="col s12 m6">
                <div class="card hoverable blue lighten-1">
                    <div class="card-content white-text">
                        <span class="card-title">
                            <h5><b>@Html.DisplayFor(model => model.Descripcion) @Html.DisplayFor(model => model.Descripcion)</b>
                            </h5>
                        </span>
                        <dl>
                            <dt>
                                <h6>@Html.DisplayNameFor(model => model.Descripcion) : @Html.DisplayFor(model =>
                                model.Descripcion)</h6>
                            </dt>
                            <hr>
                        </dl>
                    </div>
                    <div class="card-action blue-grey darken-2">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="IdEspecialidad" />
                            <input type="submit" value="Eliminar" class="waves-effect waves-light btn orange lighten-2">
                            <a asp-action="Index" class="waves-effect waves-light btn green darken-3 right">Volver</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>
</body>
</html>
