@model Hospital.Models.Especialidad


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Especialidad</h4>
    <hr />
    <div class="row">
        <div>
            <form class="col s12" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdEspecialidad" />
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        <input asp-for="Descripcion" type="text" class="validate">
                        <label asp-for="Descripcion"></label>
                        <span asp-validation-for="Descripcion"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col s6 m6">
                        <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Grabar
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                    <div class="col s6 m6">
                        <a class="waves-effect waves-light btn grey darken-4" asp-action="Index"><i
                                class="material-icons left">undo</i>Volver</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
