@model Hospital.Models.Medico

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>

<body>

    <h4>Estas seguro de eliminar el siguiente m√©dico?</h4>
    <div>
        <h5>Medico</h5>
        <hr />
        <div class="row">
            <div class="col s12 m6">
                <div class="card hoverable blue lighten-1">
                    <div class="card-content white-text">
                        <span class="card-title">
                            <h5><b>@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)</b>
                            </h5>
                        </span>
                        <dl>
                            <dt>
                                <h6>@Html.DisplayNameFor(model => model.Direccion) : @Html.DisplayFor(model =>
                                model.Direccion)</h6>
                            </dt>
                            <hr>
                            <dt>
                                <h6>@Html.DisplayNameFor(model => model.Telefono) : @Html.DisplayFor(model =>
                                model.Telefono)</h6>
                            </dt>
                            <hr>
                            <dt>
                               <h6>@Html.DisplayNameFor(model => model.Email) : @Html.DisplayFor(model => model.Email)</h6>
                            </dt>
                            <hr>
                            <dt>
                                <h6>@Html.DisplayNameFor(model => model.HorarioAtencionDesde) : @Html.DisplayFor(model =>
                                model.HorarioAtencionDesde)</h6>
                            </dt>
                            <hr>
                            <dt>
                                <h6>@Html.DisplayNameFor(model => model.HorarioAtencionHasta) : @Html.DisplayFor(model =>
                                model.HorarioAtencionHasta)</h6>
                            </dt>
                        </dl>
                    </div>
                    <div class="card-action blue-grey darken-2">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="IdMedico" />
                            <input type="submit" value="Eliminar" class="waves-effect waves-light btn orange lighten-2">
                            <a asp-action="Index" class="waves-effect waves-light btn green darken-3 right">Volver</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
